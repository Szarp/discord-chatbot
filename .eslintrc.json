{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-extra-parens": "error",
        "no-unsafe-optional-chaining": "error",
        "no-useless-backreference": "error",
        "require-atomic-updates": "error",
        "eqeqeq": "error",
        "no-else-return": "error",
        "no-return-await": "error",
        "require-await": "error",
        "no-var": "error",
        "no-warning-comments": "warn",
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "camelcase": [
            "error",
            {
                "allow": [
                    "icon_url",
                    "correct_answer"
                ]
            }
        ],
        "brace-style": [
            "error",
            "1tbs"
        ],
        "no-trailing-spaces": "error"
    }
}
